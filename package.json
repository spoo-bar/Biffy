{
    "name": "biffy",
    "displayName": "Biffy",
    "description": "Language tools for BIF",
    "publisher": "spoorthi",
    "version": "1.5.1",
    "license": "SEE LICENSE IN LICENSE",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "BIF",
        "beml",
        "bxml"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/spoon611/Biffy.git"
    },
    "activationEvents": [
        "onLanguage:bif",
        "onCommand:biffy.mapObject"
    ],
    "main": "./out/src/extension",
    "icon": "images/icon.png",
    "contributes": {
        "languages": [
            {
                "id": "bif",
                "aliases": [
                    "BIF",
                    "bif"
                ],
                "extensions": [
                    ".beml",
                    ".bxml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bif",
                "scopeName": "source.bif",
                "path": "./syntaxes/bif.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "bif",
                "path": "./snippets.json"
            }
        ],
        "configuration": [
            {
                "title": "Biffy",
                "properties": {
                    "conf.biffy.bifSource": {
                        "type": "string",
                        "default": "C:\\Code\\Git\\Katipo\\BIF-Source",
                        "description": "The file storage path to BIF-Source folder.",
                        "scope": "application"
                    },
                    "conf.biffy.mapperBinPath": {
                        "type": "string",
                        "default": "C:\\Code\\Git\\Katipo\\SI.ProArcMapper\\bin\\Debug",
                        "description": "The bin path to SI.ProArcMapper",
                        "scope": "application"
                    },
                    "conf.biffy.mappedViewColumn": {
                        "type": "string",
                        "enum": [
                            "Active",
                            "Beside"
                        ],
                        "default": "Beside",
                        "description": "The column to open mapped bif view in.",
                        "scope": "application"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "biffy.mapObject",
                "title": "Generate Merged Preview"
            },
            {
                "command": "biffy.generateGuid",
                "title": "Generate GUID"
            }
        ],
        "keybindings": [
            {
                "command": "biffy.mapObject",
                "key": "ctrl+m"
            },
            {
                "command": "biffy.generateGuid",
                "key": "ctrl+alt+g"
            }
        ]
    },
    "dependencies": {
        "@types/node": "^10.12.18",
        "node-powershell": "^3.3.1",
        "uuid": "^3.3.2",
        "vkbeautify": "^0.99.3",
        "vscode": "^1.1.26"
    }
}
